#!/usr/bin/env python3
import codecs
import json
import os
import pprint
from gallium.starter import main
import papier

if __name__ == '__main__':
    papier_config_path = os.path.abspath(
        os.path.join(
            os.path.dirname(papier.__file__),
            'cli.json'
        )
    )

    with codecs.open(papier_config_path, 'r') as f:
        config = json.load(f)

    main(config_content = config)
